@model ServiceOrderManager.Models.Equipment

@{
    ViewData["Title"] = "Editar";
}

<h2>@ViewData["Title"]</h2>

<h4>Equipment</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Id" />
            <div class="form-group">
                <label asp-for="Description" class="control-label"></label>
                <input asp-for="Description" class="form-control" />
                <span asp-validation-for="Description" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="InternalControl" class="control-label"></label>
                <input asp-for="InternalControl" class="form-control" />
                <span asp-validation-for="InternalControl" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Details" class="control-label"></label>
                <textarea asp-for="Details" class="form-control"></textarea>
                <span asp-validation-for="Details" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="ServiceOrders" class="control-label"></label> @Html.ViewData.Model.ServiceOrders.Count
                <table class="table">
                    <thead>
                        <tr>
                            <th>
                                Description
                            </th>
                            <th>
                                InternalControlOS
                            </th>
                            <th>
                                DateFinish
                            </th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Html.ViewData.Model.ServiceOrders)
                        {
                        <tr>
                            <td>@item.Description</td>
                            <td>@item.InternalControlOS</td>
                            <td>@item.Finish</td>
                        </tr> 
                        }
                    </tbody>
                </table>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-default" />
                <a asp-action="Delete" asp-route-id="@Html.ViewData.Model.Id">Delete</a>
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
